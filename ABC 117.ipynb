   "source": [
    "#C\n",
    "n, m = map(int,input().split())\n",
    "X = list(map(int,input().split()))\n",
    "X.sort()\n",
    "\n",
    "dist = []\n",
    "for i in range(m-1):\n",
    "    dist.append(X[i+1]-X[i])\n",
    "dist.sort()\n",
    "    \n",
    "ans = 0\n",
    "for i in range(max(m-n,0)):\n",
    "    ans += dist[i]\n",
    "\n",
    "print(ans)"
   ]
  }
