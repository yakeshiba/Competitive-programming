    "#C\n",
    "N =  int(input())\n",
    "ans = []\n",
    "while True:\n",
    "    newN = int(N/-2)\n",
    "    mod = N%(-2)\n",
    "    if abs(newN) >= 2:\n",
    "        N = newN\n",
    "        ans.append(mod)\n",
    "    else:\n",
    "        ans.append(newN)\n",
    "        break\n",
    "print(ans[::-1])"
   ]
  }
