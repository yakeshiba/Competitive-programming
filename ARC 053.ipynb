   "source": [
    "#B\n",
    "from collections import Counter\n",
    "\n",
    "S = input()\n",
    "\n",
    "cnt = Counter(S)\n",
    "\n",
    "#奇数の個数分s_iができる\n",
    "cnt_s = 0\n",
    "for value in cnt.values():\n",
    "    if value%2:\n",
    "        cnt_s += 1\n",
    "\n",
    "if cnt_s:\n",
    "    x = ((len(S)-cnt_s)//2)//cnt_s\n",
    "    print(2*x+1)\n",
    "else:\n",
    "    print(len(S))"
   ]
  }
